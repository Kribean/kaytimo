datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique
  age   Int
}

model CardActiv {
  id             String @id @default(auto()) @map("_id") @db.ObjectId
  type_acti      String
  name_fr        String
  imgSrc         String
  approxDistance Float
  approxTime     Float
  carRequired    Boolean
  targetAudience String[]
  suitableFor    String[]
  description    String
}
