datasource db {
  provider = "sqlite"
  url      = "file:../src/db/database.sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
  age   Int
}

model CardActiv {
  id             Int    @id @default(autoincrement())
  name_fr        String
  imgSrc         String
  approxDistance Float
  approxTime     Float
  carRequired    Boolean
  targetAudience String
  suitableFor    String
  description    String
}
